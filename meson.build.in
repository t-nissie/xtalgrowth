# -*-Meson-*-
# meson.build will be generated from meson.build.in by configure and config.status.
# Do NOT edit meson.build! Edit meson.build.in!
##
project('xtalgrowth', 'c',
        version: '@PACKAGE_VERSION@')

# Find libraries
popt_dep = dependency('popt', required: true)  # libpopt
x11_dep  = dependency('x11',  required: true)  # X11

# Find C compiler
cc = meson.get_compiler('c')

# Subdirectory
subdir('src')

# Man page
install_man('xtalgrowth.1', install_dir: get_option('mandir') / 'man1')

# Install index.??.html and figures
install_data(['index.en.html',
              'index.es.html',
              'index.ja.html',
              'index.html',
              'style.css',
              'COPYING',
              'favicon.ico',
              'README.md'], install_dir: join_paths(get_option('prefix'),
                                                    get_option('datadir'), 'doc',
                                                    meson.project_name())          )
install_data(['figures/cd.jpg',
              'figures/example.jpg',
              'figures/large.jpg',
              'figures/xtals.jpg'
             ], install_dir: join_paths(get_option('prefix'),
                                        get_option('datadir'), 'doc',
                                        meson.project_name(),  'figures')          )
